# Strategic Intelligence Dashboard - Environment Variables
# Copy this file to .env.local and configure your settings

# ===== API CONFIGURATION =====
# Backend API URL (FastAPI server)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time communication
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===== SUPABASE CONFIGURATION =====
# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase anon key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===== OPTIONAL SETTINGS =====
# Application environment
NEXT_PUBLIC_APP_ENV=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# API request timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# WebSocket reconnection settings
NEXT_PUBLIC_WS_RECONNECT_DELAY=3000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# ===== DEVELOPMENT SETTINGS =====
# Enable development features
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Show performance metrics
NEXT_PUBLIC_SHOW_PERFORMANCE=true

# Setup Instructions:
# 1. Copy this file to .env.local
# 2. Configure NEXT_PUBLIC_API_URL to point to your FastAPI server
# 3. Set up Supabase credentials if using authentication
# 4. Adjust WebSocket settings if needed
# 5. Run: npm run dev